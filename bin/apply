#!/bin/bash
set -euo pipefail
set -x

if [ "${TRAVIS_BRANCH}" == "master" ] || [[ "${TRAVIS_BRANCH}" =~ "auto-ci" ]]; then
  echo "condition passed"
  go get -u github.com/tonglil/labeler

  [ -z "$GITHUB_TOKEN" ] && echo "Need to set GITHUB_TOKEN"

  ls -la .
  cat labels.yaml

  labeler apply labels.yaml -l 9
fi
